---
const { class: className, icon, title, text } = Astro.props;

---

<div class="font-sans">
  <!-- <i class="iconify w-7 h-7 mb-2" :class={className} data-icon={icon}></i> -->
  <h4 class="font-light tracking-tighter text-lg mb-2 text-muted-1000 dark:text-muted-100"> {icon && <Fragment set:html={icon} />} {title}</h4>
  <p class="text-sm text-muted-800 dark:text-muted-400">{text}</p>
</div>